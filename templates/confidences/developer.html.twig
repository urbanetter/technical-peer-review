{% extends 'base.html.twig' %}

{% block title %}Hoi {{ developer.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-1">{{ developer.name }}</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Topic</th>
                <th scope="col">Confidence</th>
            </tr>
            </thead>
            <tbody>
            {% for confidence in confidences %}
                <tr>
                    <th scope="row">{{ confidence.name }}</th>
                    <td>
                        <div
                                data-controller="confidence"
                                data-confidence-url-value="{{ path('app_confidence', {'key': developer.key, 'topic': confidence.id}) }}"
                                class="btn-group"
                        >
                            {{ include('confidences/confidence.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}