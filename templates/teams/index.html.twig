{% extends 'base.html.twig' %}

{% block title %}Technical Peer Review {{ team.title }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="display-1">Team {{ team.title }}!</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Topic</th>
                <th scope="col">Assessments</th>
            </tr>
        </thead>
        <tbody>

        {% for topic in topics %}
            <tr>
                <th scope="row">{{ topic.name }}</th>
                <td>
                    Done: {{ topic.current }} out of {{ topic.total }}
                    {% if topic.current == topic.total %}
                        <span class="text-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                        </span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Developer</th>
            <th scope="col">Assessments</th>
        </tr>
        </thead>
        <tbody>

        {% for developer in developers %}
            <tr>
                <th scope="row">{{ developer.name }}</th>
                <td>
                    Done: {{ developer.current }} out of {{ developer.total }}
                    {% if developer.current == developer.total %}
                        <span class="text-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                        </span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-flex flex-column-reverse">
        <a href="{{ path('app_teams_spider', {'name': team.name}) }}" class="btn btn-primary">See Team Spider!</a>
    </div>

</div>
{% endblock %}
